# ~/.ssh/config
# Host directive for the specific server

Host your-server-ip
    # Hostname or IP address of your server
    HostName 100.25.119.84

    # User to connect as
    User ubuntu

    # Specify the private key to use
    IdentityFile ~/.ssh/school

    # Disable password authentication
    PasswordAuthentication no

    # Enables hash visualization of the known_hosts file, providing additional security.
    HashKnownHosts yes
